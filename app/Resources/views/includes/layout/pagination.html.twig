<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
    {% for page in pagination.first_page..pagination.last_page %}
      <li class="page-item {% if pagination.current_page == page %} active{% endif %}">
        <a class="page-link" href="?page={{ page }}">{{ page }}  {% if pagination.current_page == page %}<span class="sr-only">(current)</span>{% endif %}</a>
      </li>
    {% endfor %}
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
  </ul>
</nav>