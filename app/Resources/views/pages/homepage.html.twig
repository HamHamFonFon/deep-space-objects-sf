{% extends 'base.html.twig' %}

{% set pageTitle = 'menu.homepage'|trans %}
{% set pageDesc = '' %}

{% block content %}

  <header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">
            {{ 'homepage.message'|trans }}
          </h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          {% include ':forms:homesearch.html.twig' %}
        </div>
      </div>
    </div>
  </header>


  <section class="features-icons bg-light text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-screen-desktop m-auto text-primary"></i>
            </div>
            <h3>Recherchez</h3>
            <p class="lead mb-0">Les plus beaux objets de l'univers profond</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-layers m-auto text-primary"></i>
            </div>
            <h3>Découvrez</h3>
            <p class="lead mb-0">Plus de 9400 objets répertoriés</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-check m-auto text-primary"></i>
            </div>
            <h3>Astrobin</h3>
            <p class="lead mb-0">Photo astrobin...</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  {% if images_day is defined %}
    <section class="showcase">
      <div class="container-fluid p-0">
        {% for imageDay in images_day %}
          {% set image = imageDay.listImages.0 %}
          {% include ':includes/home:image_day.html.twig' with {imageDay: image, index: loop.index } %}
        {% endfor %}
      </div>
    </section>
  {% endif %}
{% endblock %}